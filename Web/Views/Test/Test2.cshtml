
@{
    ViewBag.Title = "Test2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kỹ năng mềm - Trang mở đầu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-xxxxxxx" crossorigin="anonymous">
    @*<link rel="stylesheet" href="~/Content/Test2.css">*@

</head>



<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Kỹ năng mềm</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Course", "Course")">Khóa học</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Lesson", "Lesson")">Bài học</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Test", "Test")">Bài kiểm tra</a>
                    </li>
                </ul>
            </div>
            @Html.Partial("_LoginPartial")
        </nav>
    </header>

        <main>
            <div class="Header">
                <div class="logo"><img src="~/Content/images/GQ.jpg"></div>
                <h2>Kỹ Năng Giải Quyết Vấn Đề</h2>
            </div>

            <script src="https://codetienich.github.io/dulieu/mainquiz1.js" type="text/javascript"></script>
            <div class="quiz-main" data-quiztype="Graded" data-duration="0">
                <ul>
                    <div class="separator" style="clear: both;">
                        <b><span style="color: red;">Phải làm đủ các câu thì phần <span style="color: blue;">"Kiểm tra kết quả"</span> mới hiện ra
                    </div></br>
                    <li data-sectionid="1" class="quiz-section">
                        <div class="quiz-section-title">
                            <b><span style="color: black; font-family: Times, Times New Roman, serif;">Câu 1: </span></b><b><span style="color: black; font-family: Times, Times New Roman, serif;">Trong việc giải quyết vấn đề, chúng ta nên tập trung vào đâu trước tiên?</span></b>
                        </div>
                        <div class="quiz-section-content">
                            <div class="item item-question item-choices">
                                <ul class="list btn-group group-theme">
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-1" data-status=1 data-point=1 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Tìm hiểu vấn đề </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-1" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Brainstorm - động não </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-1" data-status=0 data-point=0 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Nhận thức lại vấn đề (reframe) </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <br />

                    <li data-sectionid="2" class="quiz-section">
                        <div class="quiz-section-title">
                            <b><span style="color: black; font-family: Times, Times New Roman, serif;">Câu 2: </span></b><b><span style="color: black; font-family: Times, Times New Roman, serif;">Chúng ta nên ghi ra giấy phần mô tả vấn đề vì:</span></b>
                        </div>
                        <div class="quiz-section-content">
                            <div class="item item-question item-choices">
                                <ul class="list btn-group group-theme">
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-2" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Nó giúp chúng ta mô tả vấn đề rõ ràng hơn. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-2" data-status=1 data-point=1 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Mọi người dễ dàng tham gia cùng thảo luận về vấn đề này. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-2" data-status=0 data-point=0 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Nó giúp cho người tư vấn dễ dàng giúp đỡ bạn hơn. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-2" data-status=0 data-point=0 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview">Nó giúp chúng ta tìm ra nhiều vấn đề hơn.</div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <br />

                    <li data-sectionid="3" class="quiz-section">
                        <div class="quiz-section-title">
                            <b><span style="color: black; font-family: Times, Times New Roman, serif;">Câu 3: </span></b><b><span style="color: black; font-family: Times, Times New Roman, serif;"> Một số lỗi mà chúng ta có thể mắc phải khi giải quyết vấn đề?</span></b>
                        </div>
                        <div class="quiz-section-content">
                            <div class="item item-question item-choices">
                                <ul class="list btn-group group-theme">
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-3" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Tự giới hạn bản thân mình trong một ràng buộc không cần thiết. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-3" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Dựa vào quá nhiều giả định mà không thử nghiệm. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-3" data-status=0 data-point=0 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Đóng khung vấn đề quá hẹp </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-3" data-status=1 data-point=1 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview">Đóng khung vấn đề thiên về giải pháp mà chúng ta yêu thích.</div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <br />

                    <li data-sectionid="4" class="quiz-section">
                        <div class="quiz-section-title">
                            <b><span style="color: black; font-family: Times, Times New Roman, serif;">Câu 4: </span></b><b><span style="color: black; font-family: Times, Times New Roman, serif;"> Chúng ta có thể tìm kiếm cách giải quyết vấn đề của mình từ bên ngoài tổ chức bằng cách:</span></b>
                        </div>
                        <div class="quiz-section-content">
                            <div class="item item-question item-choices">
                                <ul class="list btn-group group-theme">
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-4" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Tìm kiếm những vấn đề tương tự đã được giải quyết, sau đó áp dụng cho vấn đề của mình. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-4" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Đưa vấn đề của mình lên các nền tảng/cộng đồng có kết nối với những chuyên gia, những người chuyên giải quyết vấn đề để tìm kiếm giải pháp. </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-4" data-status=1 data-point=1 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Cả 2 cách trên </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <br />

                    <li data-sectionid="5" class="quiz-section">
                        <div class="quiz-section-title">
                            <b><span style="color: black; font-family: Times, Times New Roman, serif;">Câu 5: </span></b><b><span style="color: black; font-family: Times, Times New Roman, serif;"> Trong khi giải quyết vấn đề có liên quan nhiều đến con người, chúng ta:</span></b>
                        </div>
                        <div class="quiz-section-content">
                            <div class="item item-question item-choices">
                                <ul class="list btn-group group-theme">
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-5" data-status=0 data-point=0 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Cần có sự thấu cảm </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-5" data-status=1 data-point=1 /> <span class="mark"></span></label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Đặt mình vào vị trí của người mà mình cần giải quyết </div>
                                        </div>
                                    </li>
                                    <li class="list-item">
                                        <label class="overlabel"><input type="radio" class="hide" name="option-5" data-status=0 data-point=0 /> <span class="mark"></span> </label>
                                        <div class="boxcheck">
                                            <div class="answer-desc textview"> Cần hiểu được bối cảnh của vấn đề. </div>
                                        </div>
                                    </li>                                   
                                </ul>
                            </div>
                        </div>
                    </li>
                    <br />
                    <div class="quiz-check">
                        <div class="quiz-result hide"></div>
                        <a class="btn btn-primary disabled check-quiz">Kiểm tra kết quả</a>
                        <a class="btn hide reset-quiz">Làm lại</a>
                    </div>
            </div>
            </main>
        </body>
</html>


